<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:mtf="nativescript-masked-text-field" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="Demo" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>

    <StackLayout class="p-20">
        <mtf:MaskedTextField class="input input-border" text="{{ value }}" mask="(999) 999-9999" keyboardType="phone" />
        <Label class="h2" text="{{ value }}" />
    </StackLayout>
</Page>
